<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_row"
    style="@style/Ll_normal_vtl">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5"
        android:elevation="@dimen/dp2"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                style="@style/Ll_normal_htl"
                android:background="#F1F3F4"
                android:baselineAligned="false"
                android:gravity="center"
                android:minHeight="@dimen/dp30"
                android:paddingLeft="@dimen/dp5">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:gravity="center|left"
                    android:text="Class : " />

                <TextView
                    android:id="@+id/tv_class"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:gravity="center|left"
                    android:text="Class " />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:gravity="center"
                    android:text="Class : " />

                <TextView
                    android:id="@+id/tv_Subject"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".23"
                    android:gravity="center|left"
                    android:text="Class " />


            </LinearLayout>

            <LinearLayout
                style="@style/Ll_normal_htl"
                android:baselineAligned="false"
                android:minHeight="@dimen/dp30"
                android:paddingLeft="@dimen/dp5">

                <TextView
                    style="@style/tv_weight_normal"
                    android:layout_weight=".3"
                    android:text="Exam Type :" />

                <TextView
                    android:id="@+id/tv_ExamType"
                    style="@style/tv_weight_normal"
                   android:layout_weight=".7"
                    android:text="Unit Test" />


            </LinearLayout>

            <LinearLayout
                style="@style/Ll_normal_htl"
                android:minHeight="@dimen/dp30"
                android:paddingLeft="@dimen/dp5">

                <TextView
                    style="@style/tv_weight_normal"
                    android:layout_weight="0.3"
                    android:text="Syllabus Title : " />

                <TextView
                    android:id="@+id/tv_SyllabusTitle"
                    style="@style/tv_weight_normal"
                    android:layout_weight=".7"
                    android:text="Syllabus Title" />


                <!--      <ImageView
                          style="@style/imgvw_normal"
                          android:id="@+id/img_Attachment"
                          android:padding="@dimen/dp4"
                          android:background="@drawable/ic_attach_file_white"
                          android:backgroundTint="@color/green"
                          />-->


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>