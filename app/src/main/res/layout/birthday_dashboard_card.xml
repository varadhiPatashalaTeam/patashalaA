<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView style="@style/cardViewStyle"
    android:layout_height="@dimen/dp150"
    android:layout_margin="@dimen/dp5"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout style="@style/linearLayout_Normal_Vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/baumans"
                style="@style/textView_W0HM"
                android:layout_weight=".7"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp8"
                android:text="Birthday"
                android:textSize="12sp" />



            <LinearLayout
                style="@style/linearLayout_W0HM"
                android:layout_weight=".1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:src="@drawable/ic_sync_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBirthday"
                style="@style/linearLayout_W0HM"
                android:layout_weight=".1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>



        </LinearLayout>

        <View
            style="@style/view_horizantal_H1WM"
            android:background="@color/backgroundColor2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp120"
            android:orientation="vertical"
            android:gravity="center">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcvBirthday"
                style="@style/recyclerViewStyle"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/dp1"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/llDataNotAvailableBirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                    android:src="@drawable/ic_no_data"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Upcoming birthday available"
                    android:fontFamily="@font/nunito_extralight"/>

            </LinearLayout>




        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>