<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp5"
    android:id="@+id/ll_vehicleList"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginRight="@dimen/dp5"
        android:background="@drawable/rounded_button_white"
        android:orientation="vertical"
        android:id="@+id/ll_vehicle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp25"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp5"
            android:paddingTop="@dimen/dp5"
            android:paddingRight="@dimen/dp5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:fontFamily="@font/baumans"
                android:text="Vehicle ID "
                android:textColor="@color/grey"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tv_vehicleId"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:fontFamily="@font/nunito_extralight"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp14" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp25"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp5"
            android:paddingTop="@dimen/dp5"
            android:paddingRight="@dimen/dp5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:fontFamily="@font/baumans"
                android:text="Vehicle Type "
                android:textColor="@color/grey"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tv_vehicleName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:fontFamily="@font/nunito_extralight"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp25"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp5"
            android:paddingTop="@dimen/dp5"
            android:paddingRight="@dimen/dp5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:fontFamily="@font/baumans"
                android:text="Vehicle Register No "
                android:textColor="@color/grey"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tv_vehicleReg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:fontFamily="@font/nunito_extralight"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp14" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp25"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp5"
            android:paddingTop="@dimen/dp5"
            android:paddingRight="@dimen/dp5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:fontFamily="@font/baumans"
                android:text="Vehicle Body Type "
                android:textColor="@color/grey"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tv_vehicleType"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:fontFamily="@font/nunito_extralight"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp14" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp25"
            android:layout_marginBottom="@dimen/dp5"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp5"
            android:paddingTop="@dimen/dp5"
            android:paddingRight="@dimen/dp5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:fontFamily="@font/baumans"
                android:text="GPS Details"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tv_vehicleDetails"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:fontFamily="@font/nunito_extralight"
                android:text="Vehicle ID "
                android:textColor="@color/grey"
                android:textSize="@dimen/sp14" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp2"
        android:layout_marginBottom="@dimen/dp2"
        android:layout_marginRight="@dimen/dp10"
        android:src="@drawable/doted_line"
        android:layerType="software" />

    <!--  </android.support.v7.widget.CardView>-->


</LinearLayout>