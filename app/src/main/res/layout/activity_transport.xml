<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_colorPrimaryDark">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:contentDescription="@string/image"
                android:src="@drawable/ic_arrow_back_white_24dp" />

            <TextView
                android:id="@+id/text_view_assign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/iv_backBtn"
                android:layout_margin="10dp"
                android:gravity="center|start"
                android:text="Transport"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:ignore="RelativeOverlap" />


        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp5"
                app:cardMaxElevation="@dimen/dp8">

                <LinearLayout
                    android:orientation="horizontal"
                    style="@style/linearLayout_M"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:padding="@dimen/dp5"
                        android:background="#CDDC39"
                        android:src="@drawable/ic_school_bus"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        style="@style/tv_normal"
                        android:gravity="center|top"
                        android:layout_weight="1"
                        android:fontFamily="@font/baumans"
                        android:textSize="@dimen/sp15"
                        android:text="15\n No of Vehicles"
                        android:textColor="@color/drak_grey"
                        android:visibility="visible" />
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp5"
                app:cardMaxElevation="@dimen/dp8">

                <LinearLayout
                    android:orientation="horizontal"
                    style="@style/linearLayout_M"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:padding="@dimen/dp5"
                        android:background="#83F788"
                        android:src="@drawable/ic_driver"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        style="@style/tv_normal"
                        android:gravity="center|top"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp15"
                        android:fontFamily="@font/baumans"
                        android:text="10\n No of Drivers"
                        android:textColor="@color/drak_grey"
                        android:visibility="visible" />
                </LinearLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp10">


            <android.support.v7.widget.CardView
                android:id="@+id/cvAddBus"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp80"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp5"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp5"
                app:cardMaxElevation="@dimen/dp8">

                <LinearLayout
                    android:orientation="vertical"
                    style="@style/linearLayout_M"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:src="@drawable/ic_school_bus"
                        />
                    <TextView
                        style="@style/tv_normal"
                        android:gravity="center|top"
                        android:textSize="@dimen/sp15"
                        android:text="Bus"
                        android:fontFamily="@font/nunito_extralight"
                        android:textColor="@color/drak_grey"
                        android:visibility="visible" />
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvAddRoute"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp80"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp5"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp5"
                app:cardMaxElevation="@dimen/dp8">
                <LinearLayout
                    android:orientation="vertical"
                    style="@style/linearLayout_M"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:src="@drawable/ic_route"
                        />
                    <TextView
                        style="@style/tv_normal"
                        android:gravity="center|top"
                        android:textSize="@dimen/sp15"
                        android:text="Route"
                        android:fontFamily="@font/nunito_extralight"
                        android:textColor="@color/drak_grey"
                        android:visibility="visible" />
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvAssignDriver"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp80"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp5"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp5"
                app:cardMaxElevation="@dimen/dp8">
                <LinearLayout
                    android:orientation="vertical"
                    style="@style/linearLayout_M"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:src="@drawable/ic_driver"
                        />
                    <TextView
                        style="@style/tv_normal"
                        android:gravity="center|top"
                        android:textSize="@dimen/sp15"
                        android:text="Assign Driver"
                        android:fontFamily="@font/nunito_extralight"
                        android:textColor="@color/drak_grey"
                        android:visibility="visible" />
                </LinearLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <android.support.v7.widget.CardView
                android:id="@+id/cvBusIssues"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp80"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp5"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp5"
                app:cardMaxElevation="@dimen/dp8">
                <LinearLayout
                    android:orientation="vertical"
                    style="@style/linearLayout_M"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:src="@drawable/ic_bus_issues"
                        />
                    <TextView
                        style="@style/tv_normal"
                        android:gravity="center|top"
                        android:textSize="@dimen/sp15"
                        android:text="Issues"
                        android:fontFamily="@font/nunito_extralight"
                        android:textColor="@color/drak_grey"
                        android:visibility="visible" />
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvParentIssues"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp80"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp5"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp5"
                app:cardMaxElevation="@dimen/dp8">
                <LinearLayout
                    android:orientation="vertical"
                    style="@style/linearLayout_M"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:src="@drawable/ic_parents_issues"
                        />
                    <TextView
                        style="@style/tv_normal"
                        android:gravity="center|top"
                        android:textSize="@dimen/sp15"
                        android:text="Parent Issues"
                        android:fontFamily="@font/nunito_extralight"
                        android:textColor="@color/drak_grey"
                        android:visibility="visible" />
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvAddExpenses"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp80"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp5"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp5"
                app:cardMaxElevation="@dimen/dp8">
                <LinearLayout
                    android:orientation="vertical"
                    style="@style/linearLayout_M"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:src="@drawable/ic_expenses"
                        />
                    <TextView
                        style="@style/tv_normal"
                        android:gravity="center|top"
                        android:textSize="@dimen/sp15"
                        android:text="Add Expense"
                        android:fontFamily="@font/nunito_extralight"
                        android:textColor="@color/drak_grey"
                        android:visibility="visible" />
                </LinearLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <android.support.v7.widget.CardView
                android:id="@+id/cvDriverPerformance"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp80"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp5"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp5"
                app:cardMaxElevation="@dimen/dp8">
                <LinearLayout
                    android:orientation="vertical"
                    style="@style/linearLayout_M"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:src="@drawable/ic_driver_performance"
                        />
                    <TextView
                        style="@style/tv_normal"
                        android:gravity="center|top"
                        android:textSize="@dimen/sp15"
                        android:text="Performance"
                        android:fontFamily="@font/nunito_extralight"
                        android:textColor="@color/drak_grey"
                        android:visibility="visible" />
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvAttendance"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp80"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp5"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp5"
                app:cardMaxElevation="@dimen/dp8">
                <LinearLayout
                    android:orientation="vertical"
                    style="@style/linearLayout_M"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:src="@drawable/ic_schedule"
                        />
                    <TextView
                        style="@style/tv_normal"
                        android:gravity="center|top"
                        android:textSize="@dimen/sp15"
                        android:text="Attendance"
                        android:textColor="@color/drak_grey"
                        android:fontFamily="@font/nunito_extralight"
                        android:visibility="visible" />
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvNotification"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp80"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp5"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp5"
                app:cardMaxElevation="@dimen/dp8">
                <LinearLayout
                    android:orientation="vertical"
                    style="@style/linearLayout_M"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:src="@drawable/ic_notification_filled"
                        />
                    <TextView
                        style="@style/tv_normal"
                        android:gravity="center|top"
                        android:textSize="@dimen/sp15"
                        android:text="Notification"
                        android:fontFamily="@font/nunito_extralight"
                        android:textColor="@color/drak_grey"
                        android:visibility="visible" />
                </LinearLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <android.support.v7.widget.CardView
                android:id="@+id/cvTripDetails"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp80"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp5"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp5"
                app:cardMaxElevation="@dimen/dp8">
                <LinearLayout
                    android:orientation="vertical"
                    style="@style/linearLayout_M"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:src="@drawable/ic_trip_details"
                        />
                    <TextView
                        style="@style/tv_normal"
                        android:gravity="center|top"
                        android:textSize="@dimen/sp15"
                        android:text="Trip Details"
                        android:fontFamily="@font/nunito_extralight"
                        android:textColor="@color/drak_grey"
                        android:visibility="visible" />
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvBusPerformance"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp80"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp5"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp5"
                app:cardMaxElevation="@dimen/dp8">
                <LinearLayout
                    android:orientation="vertical"
                    style="@style/linearLayout_M"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:src="@drawable/ic_vehicle_performance"
                        />
                    <TextView
                        style="@style/tv_normal"
                        android:gravity="center|top"
                        android:textSize="@dimen/sp15"
                        android:text="Bus Performance"
                        android:textColor="@color/drak_grey"
                        android:fontFamily="@font/nunito_extralight"
                        android:visibility="visible" />
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvCctv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp80"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp5"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp5"
                app:cardMaxElevation="@dimen/dp8">
                <LinearLayout
                    android:orientation="vertical"
                    style="@style/linearLayout_M"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:src="@drawable/ic_cctv"
                        />
                    <TextView
                        style="@style/tv_normal"
                        android:gravity="center|top"
                        android:textSize="@dimen/sp15"
                        android:text="Live Cam"
                        android:textColor="@color/drak_grey"
                        android:visibility="visible"
                        android:fontFamily="@font/nunito_extralight" />
                </LinearLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <android.support.v7.widget.CardView
                android:id="@+id/cvInventory"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp80"
                android:layout_margin="@dimen/dp5"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp5"
                app:cardMaxElevation="@dimen/dp8">
                <LinearLayout
                    android:orientation="vertical"
                    style="@style/linearLayout_M"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:src="@drawable/ic_inventory"
                        />
                    <TextView
                        style="@style/tv_normal"
                        android:gravity="center|top"
                        android:textSize="@dimen/sp15"
                        android:text="Inventory"
                        android:textColor="@color/drak_grey"
                        android:visibility="visible"
                        android:fontFamily="@font/nunito_extralight" />
                </LinearLayout>


            </android.support.v7.widget.CardView>




        </LinearLayout>



    </LinearLayout>




</LinearLayout>