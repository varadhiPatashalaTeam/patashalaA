<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    style="@style/Rl_normal">

    <RelativeLayout
        android:layout_width="10dp"
        android:layout_height="match_parent">

        <View
            android:layout_centerHorizontal="true"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>
        <View
            android:layout_centerHorizontal="true"
            android:layout_width="5dp"
            android:layout_marginTop="@dimen/dp40"
            android:layout_height="@dimen/dp80"
            android:background="@color/orange_colorPrimaryDark"/>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        style="@style/cardViewStyle"
        android:layout_margin="@dimen/dp5"
        app:cardElevation="@dimen/dp3"
        app:cardCornerRadius="@dimen/dp5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded">

        <LinearLayout style="@style/Ll_normal_vtl"
            android:layout_margin="@dimen/dp8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp5">

                <TextView
                    android:id="@+id/tv_ticketNo"
                    style="@style/tv_normal"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp12"
                    android:fontFamily="@font/baumans"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_gravity="center_horizontal"
                    android:text="Ticket ID" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp5">

                <TextView
                    style="@style/tv_normal"
                    android:textStyle="bold"
                    android:text="Title"
                    android:textSize="@dimen/sp12"
                    android:fontFamily="@font/baumans"/>

                <TextView
                    android:id="@+id/tv_issueTitle"
                    style="@style/tv_normal"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_extralight"
                    android:layout_marginStart="@dimen/dp10"
                    android:text="Title"
                    android:textSize="@dimen/dp11"/>

                <TextView
                    android:id="@+id/tv_TicketType"
                    style="@style/tv_normal"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="@dimen/dp11"
                    android:text="Ticket Type" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp5">

                <TextView
                    style="@style/tv_normal"
                    android:textStyle="bold"
                    android:fontFamily="@font/baumans"
                    android:textSize="@dimen/sp12"
                    android:text="Department" />

                <TextView
                    android:id="@+id/tv_department"
                    style="@style/tv_normal"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dp10"
                    android:text="Department"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="@dimen/dp11"/>

                <TextView
                    android:id="@+id/tv_TicketPriyority"
                    style="@style/tv_normal"
                    android:text="Priyority"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="@dimen/dp11"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp5">

                <TextView
                    style="@style/tv_normal"
                    android:textStyle="bold"
                    android:text="Level"
                    android:fontFamily="@font/baumans"
                    android:textSize="@dimen/sp12"/>

                <TextView
                    android:id="@+id/tv_TicketLevel"
                    style="@style/tv_normal"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dp10"
                    android:text="Level 1"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="@dimen/dp11"/>

                <TextView
                    android:id="@+id/tv_TicketDate"
                    style="@style/tv_normal"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="@dimen/dp11"
                    android:text="Date" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_Subject"
                style="@style/Rl_normal"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:background="@drawable/bg_edittext"
                android:gravity="start"
                android:padding="@dimen/dp5"
                android:text="Subject"
                android:fontFamily="@font/nunito_extralight"
                android:textSize="@dimen/dp11"/>


        </LinearLayout>


    </android.support.v7.widget.CardView>



</LinearLayout>