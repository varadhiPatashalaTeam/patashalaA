<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp120"
        android:layout_margin="5dp"
        android:elevation="@dimen/dp0"
        app:cardCornerRadius="@dimen/dp8"
        app:cardElevation="@dimen/dp8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="@dimen/dp0"
                android:layout_weight=".05"
                android:layout_margin="@dimen/dp2"
                android:gravity="center|top|left"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/dp15"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/circle_solid_green"/>
                <View
                    android:layout_width="@dimen/dp2"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/grey"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp0"
                android:layout_weight=".95"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".35"
                    android:background="@drawable/image_backgroung_green"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_StopImage"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/dp3"
                        android:layout_marginTop="@dimen/dp3"
                        android:layout_marginRight="@dimen/dp3"
                        android:layout_weight=".7"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp0"
                        android:layout_weight=".3"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:gravity="center|left"
                            android:paddingLeft="@dimen/dp5"
                            android:text="Stop Number"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_StopNo"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".3"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp5"
                            android:text="233"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp3"
                    android:layout_weight=".65"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp30"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".4"
                            android:gravity="center|left"
                            android:paddingLeft="@dimen/dp5"
                            android:text="Stop Name :"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/sp16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_StopName"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".6"
                            android:gravity="center|left"
                            android:paddingLeft="@dimen/dp5"
                            android:textColor="@color/grey"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp30"

                        android:orientation="horizontal"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp30"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".45"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center|left"
                                android:paddingLeft="@dimen/dp5"
                                android:text="Distance:"
                                android:textColor="@color/grey"
                                android:textSize="@dimen/sp13"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_StopDistance"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center|right"
                                android:paddingLeft="@dimen/dp5"
                                android:textColor="@color/grey"
                                android:textSize="@dimen/sp13"
                                android:textStyle="bold" />
                        </LinearLayout>
                        tv_StopDistance,tv_ArrivalTime
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".55"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center|left"
                                android:text="Arrival Time"
                                android:textSize="@dimen/sp13"
                                android:textColor="@color/grey"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_ArrivalTime"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center|right"
                                android:paddingLeft="@dimen/dp5"
                                android:textSize="@dimen/sp13"
                                android:textColor="@color/grey"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>