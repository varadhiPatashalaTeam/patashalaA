<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView style="@style/cardViewStyle"
    android:layout_height="220dp"
    android:layout_margin="@dimen/dp5"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout style="@style/linearLayout_Normal_Vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp30"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/baumans"
                    style="@style/textView_W0HM"
                    android:layout_weight=".7"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp8"
                    android:text="Camera"
                    android:textSize="12sp" />



                <LinearLayout
                    style="@style/linearLayout_W0HM"
                    android:layout_weight=".1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:src="@drawable/ic_sync_black_24dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCctv"
                    style="@style/linearLayout_W0HM"
                    android:layout_weight=".1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>



            </LinearLayout>

            <View
                style="@style/view_horizantal_H1WM"
                android:background="@color/backgroundColor2" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="@dimen/dp2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#ECECEC">

                <WebView
                    android:id="@+id/wbUrlOne"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dp1"/>

                <WebView
                    android:id="@+id/wbUrlTwo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dp1"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#ECECEC">

                <WebView
                    android:id="@+id/wbUrlThree"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dp1"/>

                <WebView
                    android:id="@+id/wbUrlFour"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dp1"/>

            </LinearLayout>




            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcvDashboardCCTVCamera"
                style="@style/recyclerViewStyle"
                android:layout_margin="@dimen/dp1"
                android:visibility="gone" />




        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>