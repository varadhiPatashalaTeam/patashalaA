<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/ll"
        android:layout_width="280dp"
        android:layout_height="435dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/dp5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp5"
            android:background="@drawable/backr_nims"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="@dimen/dp50"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/dp50"
                    android:background="@drawable/nims_logo"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#0C0C0C"
                    android:textSize="@dimen/sp10"
                    android:text="@string/https_nimsuniversity_org"/>


            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">





                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/idStaffImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/border"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:padding="@dimen/dp5"
                            android:scaleType="fitXY"
                            android:layout_margin="@dimen/dp5"/>

                    </LinearLayout>


                </LinearLayout>


                <TextView
                    android:id="@+id/staffName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abhishek Gupta"
                    android:textSize="15sp"
                    android:textColor="#0D577E"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/staffId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID:VS017BH0007"
                    android:textColor="#343435"
                    android:textSize="15sp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="Department"
                                android:layout_weight="2.5"
                                android:textColor="#0D577E"
                                android:textSize="@dimen/sp15"
                                android:gravity="center|start"
                                android:layout_marginTop="@dimen/dp5"
                                android:layout_marginStart="@dimen/dp5"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="Role"
                                android:gravity="end|center"
                                android:layout_weight="2.5"
                                android:textSize="@dimen/sp15"
                                android:textColor="#0D577E"
                                android:layout_marginEnd="@dimen/dp5"
                                android:layout_marginTop="@dimen/dp5"/>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/idStaffDept"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:textSize="@dimen/sp13"
                                android:text="Paenukonda"
                                android:gravity="center|start"
                                android:textColor="#343435"
                                android:layout_marginStart="@dimen/dp5" />



                            <TextView
                                android:id="@+id/idStaffRole"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:textSize="@dimen/sp13"
                                android:text="Role"
                                android:gravity="center|end"
                                android:layout_marginEnd="@dimen/dp5"
                                android:textColor="#343435"
                                />


                        </LinearLayout>


                    </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center|end"
                        android:layout_margin="@dimen/dp5">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|start"
                            android:textSize="12sp"
                            android:textColor="#444"
                            android:text="@string/address_uni"/>




                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/dp5">

                        <ImageView
                            android:id="@+id/qrImage"
                            android:layout_marginEnd="@dimen/dp10"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivdownLoad"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_file_download_black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivshare"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivclose"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_close_black_24dp" />



            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>