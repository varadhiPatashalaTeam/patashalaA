<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/orange_colorPrimaryDark"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:background="@color/orange_colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:id="@+id/img_back"
                android:contentDescription="@string/image" />

            <TextView
                style="@style/tv_normal"
                android:text="Ticket Inbox"
                android:layout_marginLeft="@dimen/dp10"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar"
        android:layout_above="@+id/ll_bottom"
        android:background="@drawable/card_design">

        <LinearLayout
            style="@style/Ll_both_match_heading"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <in.varadhismartek.patashalaerp.GeneralClass.CircleImageView
                    android:id="@+id/circleImageView"
                    android:layout_width="@dimen/dp80"
                    android:layout_height="@dimen/dp80"
                    android:layout_margin="@dimen/dp5"
                    android:background="@drawable/circle_solid_green"
                    android:padding="@dimen/dp4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="@dimen/dp2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/name"/>

                            <TextView
                                android:id="@+id/tv_Name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="@dimen/dp2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Employee ID"/>

                            <TextView
                                android:id="@+id/tv_EmpId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="@dimen/dp2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Ticket Id"/>

                            <TextView
                                android:id="@+id/tv_ticket_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="@dimen/dp2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/date"/>

                            <TextView
                                android:id="@+id/tv_Date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="@dimen/dp2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Priority"/>

                            <TextView
                                android:id="@+id/tv_priority"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/Status"/>

                            <TextView
                                android:id="@+id/tv_status_level"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/dp5"
                android:visibility="visible"
                android:layout_margin="@dimen/dp5"
                app:cardCornerRadius="@dimen/dp5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp5"
                    android:background="@color/orange_colorPrimaryDark"
                    android:visibility="visible">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/dp2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:text="Department"/>

                        <TextView
                            android:id="@+id/tv_Department"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp2"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:text="Issue Type"/>

                        <TextView
                            android:id="@+id/tv_issueType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/dp2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:text="Ticket Type"/>

                        <TextView
                            android:id="@+id/tv_ticketType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/dp2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:text="Title"/>

                        <TextView
                            android:id="@+id/tv_ticketTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/dp2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:text="Ticket Solved"/>

                        <TextView
                            android:id="@+id/tv_solved"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_weight="1" />

                    </LinearLayout>

                </LinearLayout>



            </android.support.v7.widget.CardView>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_details"
                style="@style/recyclerViewStyle"
                android:layout_marginTop="@dimen/dp5"
                android:focusable="true" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/dp5"
            android:background="@drawable/btn_round_shape_grey"
            android:padding="@dimen/dp3"
            android:visibility="gone">

            <ImageView
                android:id="@+id/attach_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp4"
                android:src="@drawable/ic_add_symbol" />

            <View
                android:layout_width="@dimen/dp1"
                android:layout_height="match_parent"
                android:background="@color/backgroundColor2" />

            <EditText
                android:id="@+id/ed_reply"
                style="@style/edittext_normal_weight"
                android:layout_marginStart="@dimen/dp10"
                android:background="@null"
                android:textColor="@color/white"
                android:textColorHint="@color/textColor"
                android:hint="Type"
                android:inputType="textMultiLine"
                android:layout_marginLeft="@dimen/dp10"
                tools:ignore="RtlHardcoded" />

            <View
                android:layout_width="@dimen/dp1"
                android:layout_height="match_parent"
                android:background="@color/backgroundColor2" />

            <ImageView
                android:id="@+id/iv_send"
                style="@style/Image_View"
                android:contentDescription="@string/image"
                android:padding="@dimen/dp4"
                android:src="@drawable/ic_send_black_24dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_escalate"
            style="@style/Ll_normal_vtl"
            android:visibility="gone">

            <LinearLayout
                style="@style/Ll_normal_htl">

                <TextView
                    style="@style/tv_weight_normal"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp10"
                    android:text="Select Level" />

                <Spinner
                    android:id="@+id/sp_SelectLevel"
                    style="@style/spinner_weight" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp35"
                android:layout_margin="@dimen/dp5"
                android:orientation="horizontal"
                android:background="@drawable/border_rect_light">

                <ImageView
                    android:layout_width="@dimen/dp40"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_search_black_24dp"
                    android:padding="@dimen/dp5"
                    android:background="@drawable/background_search_left"/>

                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text="Search Employee..."
                    android:textColor="@color/hintColor"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp5"
                    android:textSize="@dimen/sp14"/>

            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_attach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:id="@+id/ll_escalateBtn"
            android:visibility="gone"
            style="@style/Ll_normal_htl">

            <TextView
                android:id="@+id/tv_send_escelated"
                style="@style/button_normal_weight"
                android:layout_height="@dimen/dp30"
                android:background="@color/orange_colorPrimaryDark"
                android:gravity="center"
                android:text="Send" />

            <TextView
                android:id="@+id/tv_cancel_escelate"
                style="@style/button_normal_weight"
                android:layout_height="@dimen/dp30"
                android:background="@color/red"
                android:gravity="center"
                android:text="Cancel" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_buttons"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_Escalate_Ticket"
                style="@style/button_normal_weight"
                android:layout_height="@dimen/dp30"
                android:background="@color/orange_colorPrimaryDark"
                android:gravity="center"
                android:text="Escalate Ticket" />

            <TextView
                android:id="@+id/close_ticket"
                style="@style/button_normal_weight"
                android:layout_height="@dimen/dp30"
                android:background="@color/red"
                android:gravity="center"
                android:text="Close Ticket" />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>