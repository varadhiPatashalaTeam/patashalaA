<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include
        android:id="@+id/cust_tool"
        layout="@layout/school_profile_toolbar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <in.varadhismartek.patashalaerp.GeneralClass.CircleImageView
                android:id="@+id/iv_logo"
                android:layout_width="@dimen/dp100"
                android:layout_height="@dimen/dp100"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp10"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp2"
                android:elevation="@dimen/dp8"
                android:visibility="gone"
                android:background="@drawable/marks_bg"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp120"
                    android:layout_marginStart="@dimen/dp5"
                    android:layout_marginEnd="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp5"
                    android:alpha=".6"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_schoolname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:gravity="center|top"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="@dimen/dp22"
                    android:textStyle="bold|italic" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp5"
                android:background="@drawable/marks_bg"
                android:elevation="@dimen/dp8"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp5"
                    android:minHeight="@dimen/dp30"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp8"
                    android:text="Detail :"
                    android:fontFamily="@font/baumans"
                    android:background="@color/orange_colorPrimaryDark"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp14"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginRight="@dimen/dp5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_style_a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp5"
                        android:minHeight="@dimen/dp25"
                        android:layout_weight="2"
                        android:gravity="start|center"
                        android:text="Years :"
                        android:fontFamily="@font/baumans"
                        android:textColor="@color/drak_grey"/>

                    <TextView
                        style="@style/text_style_b"
                        android:id="@+id/tv_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|start"
                        android:minHeight="@dimen/dp25"
                        android:textColor="@color/drak_grey"
                        android:fontFamily="@font/nunito_extralight" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/dp2"
                    android:background="@color/trans_green" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginRight="@dimen/dp5"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_style_a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:layout_weight="2"
                        android:text="Registration No :"
                        android:textColor="@color/drak_grey"
                        android:fontFamily="@font/baumans" />

                    <TextView
                        style="@style/text_style_b"
                        android:id="@+id/tv_Registration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:minHeight="@dimen/dp25"
                        android:layout_weight="1"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/dp2"
                    android:background="@color/trans_green" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_style_a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:gravity="center|start"
                        android:layout_marginLeft="@dimen/dp5"
                        android:text="School ID: "/>

                    <TextView
                        style="@style/text_style_b"
                        android:id="@+id/tv_schoolId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="@dimen/dp25"
                        android:gravity="center|start"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/dp2"
                    android:background="@color/trans_green" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginRight="@dimen/dp5"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_style_a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center|start"
                        android:layout_gravity="center"
                        android:text="Organisation Name: "/>

                    <TextView
                        style="@style/text_style_b"
                        android:id="@+id/tv_organisation_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|start"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/dp2"
                    android:background="@color/trans_green" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp30"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginRight="@dimen/dp5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:gravity="center|left">


                        <TextView
                            style="@style/text_style_a"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|start"
                            android:layout_weight="2"
                            android:minHeight="@dimen/dp25"
                            android:text="Class :"/>


                        <TextView
                            style="@style/text_style_b"
                            android:id="@+id/tvclass_from"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:minHeight="@dimen/dp25"
                            android:layout_height="match_parent"
                            android:gravity="center|start" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:gravity="center|left"
                        android:visibility="gone">

                        <TextView
                            style="@style/text_style_a"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp8"
                            android:gravity="center"
                            android:paddingRight="@dimen/dp5"
                            android:text="Class To :"/>

                        <TextView
                            style="@style/text_style_b"
                            android:id="@+id/tvclass_to"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:paddingLeft="@dimen/dp8"
                            android:paddingRight="@dimen/dp5"
                            android:text=""
                            android:textColor="@color/black" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/dp2"
                    android:background="@color/trans_green" />


                <LinearLayout
                    android:id="@+id/llMail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_style_a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:minHeight="@dimen/dp25"
                        android:layout_marginStart="@dimen/dp5"
                        android:drawableStart="@drawable/ic_email"/>

                    <TextView
                        style="@style/text_style_b"
                        android:id="@+id/tv_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="@dimen/dp25"
                        android:gravity="center|start"
                        android:text="" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/dp2"
                    android:background="@color/trans_green" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp30"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginRight="@dimen/dp5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llPhoneOne"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:gravity="center|left">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/ic_call" />

                        <TextView
                            style="@style/text_style_a"
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp8"
                            android:gravity="center"
                            android:text="dffd"
                            android:fontFamily="@font/nunito_extralight"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llPhoneTwo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:gravity="center|left">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_smartphone" />

                        <TextView
                            style="@style/text_style_a"
                            android:id="@+id/tv_mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp8"
                            android:gravity="center"
                            android:fontFamily="@font/nunito_extralight"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/marks_bg"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_style_a"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_marginStart="@dimen/dp5"
                        android:layout_marginTop="@dimen/dp2"
                        android:drawableStart="@drawable/ic_location_on_black_24dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp5"
                        android:paddingBottom="@dimen/dp5"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            style="@style/text_style_b"
                            android:id="@+id/address"
                            android:gravity="center|start"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Address Details :"
                            android:textColor="@color/drak_grey"/>


                        <TextView
                            style="@style/text_style_b"
                            android:id="@+id/address1"
                            android:gravity="center|start"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Address Details :"
                            android:textColor="@color/drak_grey"/>

                        <TextView
                            style="@style/text_style_b"
                            android:id="@+id/pincode"
                            android:gravity="center|start"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Address Details :"
                            android:textColor="@color/drak_grey"/>


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp5"
                android:background="@drawable/marks_bg"
                android:elevation="@dimen/dp10"
                android:orientation="vertical">

                <TextView
                    style="@style/text_style_a"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp0"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp8"
                    android:minHeight="@dimen/dp30"
                    android:text="Authorized Person Detail :"
                    android:background="@color/orange_colorPrimaryDark"
                    android:textColor="@color/white"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".2"
                        android:background="@color/trans_gray"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <in.varadhismartek.patashalaerp.GeneralClass.CircleImageView
                            android:id="@+id/iv_pocImage"
                            android:layout_width="@dimen/dp70"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp20"
                            android:background="@drawable/circle_solid_green"
                            android:elevation="@dimen/dp8" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".8"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp5"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/text_style_a"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="center|left"
                                android:minHeight="@dimen/dp25"
                                android:paddingLeft="@dimen/dp5"
                                android:drawableStart="@drawable/ic_person_black_24dp"
                                android:textColor="@color/drak_grey" />

                            <TextView
                                style="@style/text_style_b"
                                android:id="@+id/poc_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:gravity="center|start"
                                android:minHeight="@dimen/dp25"
                                android:paddingLeft="@dimen/dp5"
                                android:textColor="@color/drak_grey" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="@dimen/dp2"
                            android:background="@color/trans_green" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp5"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/text_style_a"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="center|left"
                                android:minHeight="@dimen/dp25"
                                android:paddingLeft="@dimen/dp5"
                                android:drawableStart="@drawable/ic_role"
                                android:textColor="@color/drak_grey" />

                            <TextView
                                style="@style/text_style_b"
                                android:id="@+id/POC_designation"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:gravity="center|start"
                                android:minHeight="@dimen/dp25"
                                android:paddingLeft="@dimen/dp5"
                                android:textColor="@color/drak_grey" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="@dimen/dp2"
                            android:background="@color/trans_green" />

                        <LinearLayout
                            android:id="@+id/llPocEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp5"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/text_style_a"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="center|left"
                                android:minHeight="@dimen/dp25"
                                android:drawableStart="@drawable/ic_email"
                                android:paddingLeft="@dimen/dp5" />

                            <TextView
                                style="@style/text_style_b"
                                android:id="@+id/POC_email"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:gravity="center|start"
                                android:minHeight="@dimen/dp25"
                                android:paddingLeft="@dimen/dp5"
                                android:textColor="@color/drak_grey" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="@dimen/dp2"
                            android:background="@color/trans_green" />

                        <LinearLayout
                            android:id="@+id/llPocMobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp5"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/text_style_a"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="center|left"
                                android:minHeight="@dimen/dp25"
                                android:paddingLeft="@dimen/dp5"
                                android:drawableStart="@drawable/ic_call"
                                android:textColor="@color/drak_grey" />

                            <TextView
                                style="@style/text_style_b"
                                android:id="@+id/POC_mobile"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:gravity="center|start"
                                android:minHeight="@dimen/dp25"
                                android:paddingLeft="@dimen/dp5"
                                android:textColor="@color/drak_grey" />
                        </LinearLayout>


                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/dp5"
                android:background="@drawable/marks_bg"
                android:elevation="@dimen/dp8"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/text_style_a"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/dp8"
                    android:text="Links :"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_twitter"
                        android:layout_width="@dimen/dp60"
                        android:layout_height="@dimen/dp60"
                        android:layout_margin="@dimen/dp8"
                        android:background="@drawable/btn_round_shape_green"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40"
                            android:layout_gravity="center"
                            android:src="@drawable/twitter"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_facebook"
                        android:layout_width="@dimen/dp60"
                        android:layout_height="@dimen/dp60"
                        android:layout_margin="@dimen/dp8"
                        android:background="@drawable/btn_round_shape_green"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40"
                            android:layout_gravity="center"
                            android:src="@drawable/facebook"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_google"
                        android:layout_width="@dimen/dp60"
                        android:layout_height="@dimen/dp60"
                        android:layout_margin="@dimen/dp8"
                        android:background="@drawable/btn_round_shape_green"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40"
                            android:layout_gravity="center"
                            android:src="@drawable/google"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/dp5"
                    app:cardCornerRadius="@dimen/dp5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp5"
                            android:layout_marginRight="@dimen/dp5"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/dp5"
                            android:orientation="horizontal"
                            android:background="@drawable/border_rect">

                            <ImageView
                                style="@style/text_style_a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_public_black_24dp"
                                android:padding="@dimen/dp5"
                                android:background="@color/orange_colorPrimaryDark"/>

                            <TextView
                                android:id="@+id/tvSchoolLink"
                                style="@style/text_style_b"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|end"
                                android:minHeight="@dimen/dp25"
                                android:layout_marginStart="@dimen/dp10"
                                android:textColor="@color/drak_grey"
                                android:fontFamily="@font/nunito_extralight" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp5"
                            android:layout_marginRight="@dimen/dp5"
                            android:layout_marginTop="@dimen/dp5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:background="@drawable/border_rect">

                            <ImageView
                                style="@style/text_style_a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/facebook"
                                android:padding="@dimen/dp5"
                                android:background="@color/orange_colorPrimaryDark"/>

                            <TextView
                                android:id="@+id/tvSchoolFacebook"
                                style="@style/text_style_b"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|end"
                                android:minHeight="@dimen/dp25"
                                android:layout_marginStart="@dimen/dp10"
                                android:textColor="@color/drak_grey"
                                android:fontFamily="@font/nunito_extralight" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp5"
